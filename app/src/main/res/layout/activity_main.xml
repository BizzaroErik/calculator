<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/calculator_calculation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="54sp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/calculator_output"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/calculator_calculation"
            android:gravity="right"
            android:textSize="32sp"
            android:visibility="invisible"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                    <Button
                        style="@style/calculatorButton"
                        android:text="Sin"
                        android:onClick="trigonometry"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="Cos"
                        android:onClick="trigonometry"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="Tan"
                        android:onClick="trigonometry"
                        />
                    <Button
                        android:id="@+id/clear_display"
                        style="@style/calculatorButton"
                        android:text="clr"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                    <Button
                        style="@style/calculatorButton"
                        android:text="7"
                        android:onClick="number"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="8"
                        android:onClick="number"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="9"
                        android:onClick="number"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="*"
                        android:onClick="operation"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                    <Button
                        style="@style/calculatorButton"
                        android:text="4"
                        android:onClick="number"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="5"
                        android:onClick="number"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="6"
                        android:onClick="number"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="/"
                        android:onClick="operation"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                    <Button
                        style="@style/calculatorButton"
                        android:text="1"
                        android:onClick="number"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="2"
                        android:onClick="number"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="3"
                        android:onClick="number"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="-"
                        android:onClick="operation"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                    <Button
                        style="@style/calculatorButton"
                        android:text="0"
                        android:onClick="number"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="."
                        android:onClick="addDot"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="="
                        android:onClick="equals"
                        />
                    <Button
                        style="@style/calculatorButton"
                        android:text="+"
                        android:onClick="operation"
                        />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>